<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/img"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:src="@drawable/sss"

        >
    </de.hdodenhof.circleimageview.CircleImageView>








    <ImageView
        android:id="@+id/p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_attach_money_24"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-360dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prix"
        android:id="@+id/prix"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DT"
        android:textColor="@color/red"
        android:id="@+id/dt"
        android:textStyle="bold"
        android:layout_marginTop="-27dp"
        android:layout_marginLeft="150dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titre de l'annonce"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/nom"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/cat"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_marginTop="15dp"
        android:text="CatÃ©gorie de l'annonce"
        android:textStyle="bold"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/catg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_category_24"
        android:layout_marginTop="-28dp"
        android:layout_marginLeft="-360dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Localisation"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/modele"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/lc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_location_on_24"
        android:layout_marginTop="-24dp"
        android:layout_marginLeft="-360dp"

        />
    <TextView
        android:id="@+id/dater"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="300dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="-20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/d"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:id="@+id/desc"
        android:layout_marginLeft="10dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="18sp"/>



</LinearLayout>


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:background="@color/pistache"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgannoncer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="5dp"

            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/user">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/usemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

android:textColor="@color/or"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="21dp"
            android:textStyle="bold"
            android:hint="Annonceur"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="340dp"

            android:layout_marginTop="15dp"
            android:src="@drawable/appel" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

